<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".specialite"
    android:background="@drawable/specialite"
    >

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="start"
        android:textColor="@color/black"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Barre de recherche -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchBarCard"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="22.5dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_search"
                app:tint="#757575" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Rechercher un médecin ou une ville..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColorHint="#9E9E9E"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739"
        tools:ignore="UnknownId">

        <!-- Dentaire -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/dental_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_general"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Généraliste"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ophtalmologie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/eye_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="41dp"
                    android:layout_height="35dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_eye"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Ophtalmologie"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cardiologie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/heart_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Cardiologie"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pneumologie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/lung_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_lung"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Pneumologie"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ORL -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/ear_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_ear"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="ORL"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Orthopédie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/ortho_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_ortho"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Orthopédie"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Neurologie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/neuro_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_brain"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Neurologie"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pédiatrie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/pediatric_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_pediatric"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Pédiatrie"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dermatologie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/dermato_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_stom"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Gastro-entérologie"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dermatologie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/generale_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_dental"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Dentaire"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dermatologie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/nephorologie_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_nutri"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Nutrisionniste"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dermatologie -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            app:cardBackgroundColor="@color/nutritionniste_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:alpha="0.9"
                    android:src="@drawable/ic_kidn"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.95"
                    android:tag="speciality"
                    android:text="Néphrologue"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- FrameLayout pour contenir les fragments -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation" />

        <!-- BottomNavigationView -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-50dp"
            android:background="@color/purple_4"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:menu="@menu/bottom_nav_menu" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>